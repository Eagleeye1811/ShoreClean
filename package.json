{
  "name": "shore-clean",
  "version": "1.0.0",
  "description": "ShoreClean - Coastal cleanup management platform",
  "author": "ShoreClean Team",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "client",
    "server/src"
  ],
  "scripts": {
    "install-all": "npm install && cd client && npm install && cd ../server/src && npm install && cd ../../ai-server && pip install -r requirements.txt",
    "dev:client": "cd client && npm run dev",
    "dev:server": "cd server/src && npm run dev",
    "dev:ai": "cd ai-server && uvicorn app.main:app --reload",
    "build:client": "cd client && npm run build"
  },
  "dependencies": {
    "axios": "^1.12.2"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Eagleeye1811/ShoreClean.git"
  },
  "keywords": [
    "cleanup",
    "environmental",
    "volunteer",
    "coastal",
    "beach",
    "shore"
  ]
}
